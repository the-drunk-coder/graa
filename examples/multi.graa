# demonstrating the capability to play multiple events (slots) ins one node


add("""
a1|disk~c3:400:127|disk~e4:400:127|disk~a5:400:100,
a1--1500-->a1
""")

add("""
c1|nil,
c1--nil|add<dur:100>-->c1
""")

add("""
d1|mute|mute|$1=add<$1:1>,
d1-->d1
""")

"a" <<plus>> "d"
"a" <<minus>> "d"

play("a")
stop("a")

# you can also use graphs to control graphs ...
add("""
b1|play#a,
b2|stop#a,
b1--2000-->b2,
b2--2000-->b1
""")

